<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout"
    android:layout_width="335dp"
    android:layout_height="515dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/lavender_border"
    android:backgroundTint="@color/teal_200"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_marginTop="90dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.494"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.497"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <EditText
            android:id="@+id/textView"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:background="@color/g_line"
            android:focusable="true"
            android:hint="Enter The Name/Company Name"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textView2"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_line"
            android:hint="Enter the Email Address"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_line"
            android:hint="Enter the Phone Number"
            android:inputType="number|phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textpassword"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_line"
            android:hint="Enter the Password"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textView4"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_line"
            android:hint="Enter the Adhar Number"
            android:inputType="number|phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/textView5"
            android:layout_width="259dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_line"
            android:hint="Enter the Pan Number"
            android:inputType="textCapCharacters"
            android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/textView6"
            android:layout_width="233dp"
            android:layout_height="54dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="43dp"
            android:background="@color/g_line"
            android:hint="Enter the Address /\nLocate My Address"
            android:inputType="textMultiLine"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="46dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:background="@color/g_orange_yellow"
            android:src="@drawable/baseline_add_location_24" />
    </RelativeLayout>


        <Button
            android:id="@+id/signup_button"
            android:layout_width="256dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/purple_200"
            android:text="Register"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:padding="5dp"
            android:text="Already an user? Login"
            android:textColor="@color/g_blue"
            android:textSize="18sp" />

    </LinearLayout>