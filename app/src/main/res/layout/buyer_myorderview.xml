<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="171dp"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/g_search_and_icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="161dp"
            android:layout_height="164dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="239dp"
            android:layout_marginBottom="2dp"
            android:background="@color/g_card_background"
            app:srcCompat="@drawable/baseline_image_24" />

        <TextView
            android:id="@+id/categorytext"
            android:layout_width="226dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="184dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="121dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qualitytext"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="86dp"
            android:text="Quality"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantitytext"
            android:layout_width="48dp"
            android:layout_height="31dp"

            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="48dp"
            android:text="Qua"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/spinner2txt"
            android:layout_width="50dp"
            android:layout_height="29dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="237dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="50dp"
            android:text="gram"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/pricetext"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="15dp"
            android:text="Price"
            android:textColor="#000"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/g_search_and_icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">


            <TextView
                android:id="@+id/edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Shipping Details:"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="101dp"
            android:padding="1dp">

            <ImageView
                android:id="@+id/txtlocationview"
                android:layout_width="51dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline_location_on_24"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:textColor="#CB2525"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtdeliverydetails"
                android:layout_width="312dp"
                android:layout_height="89dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="DeliveryDetails"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="231dp"
        android:layout_margin="1dp"
        android:background="@color/g_search_and_icons"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794">

        <TextView
            android:id="@+id/edittxtaddreview"
            android:layout_width="243dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="181dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Add Rating and Review"
            android:textColor="#C01414"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtreview"
            android:layout_width="395dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="51dp"
            android:hint="Write a Review"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:textColor="#000"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="245dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="131dp"
            android:backgroundTint="@color/g_blue" />

        <Button
            android:id="@+id/submitbutton"
            android:layout_width="113dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="138dp"
            android:layout_marginTop="177dp"
            android:layout_marginEnd="154dp"
            android:layout_marginBottom="2dp"
            android:text="submit" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>