<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/g_card_background"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:padding="0dp">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="154dp"
            android:layout_height="118dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="246dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="52dp"
            android:background="@color/teal_700"
            app:srcCompat="@drawable/baseline_image_24" />


        <TextView
            android:id="@+id/categorytext"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"

            android:layout_marginEnd="151dp"
            android:layout_marginBottom="133dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qualitytext"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="109dp"
            android:text="Quality"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quantitytext"
            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="80dp"
            android:layout_toRightOf="@id/editTextText5"
            android:text="Qua"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/spinner2txt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="247dp"
            android:layout_marginBottom="80dp"
            android:layout_toRightOf="@id/editTextText5"
            android:text="gram"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/pricetext"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="87dp"
            android:layout_toRightOf="@id/editTextText6"
            android:text="Price"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/editTextText5"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="-383dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="338dp"
            android:layout_marginBottom="80dp"
            android:layout_toRightOf="@id/img1"
            android:inputType="none"
            android:text="Qty:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editTextText6"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="-383dp"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="55dp"
            android:layout_toRightOf="@id/img1"
            android:inputType="none"
            android:text="Rs:"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/txtlocationview"
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="355dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/outline_location_on_24"
            android:fontFamily="@font/nunito_bold"
            android:inputType="none"
            android:textColor="#CB2525"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtdeliverydetails"
            android:layout_width="318dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="115dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/nunito_bold"
            android:text="DeliveryDetails"
            android:textColor="#000000"
            android:textSize="16dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>