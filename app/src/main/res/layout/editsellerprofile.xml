<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SellerProfileEdit">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edittextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/purple_200"
            android:inputType="none"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/g_white"
            android:textSize="30dp"></TextView>



    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="119dp"
        android:layout_height="100dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_person_24" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="291dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        android:background="@color/g_line"
        android:focusable="true"
        android:hint="Enter The Name/Company Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="291dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"
        android:background="@color/g_line"
        android:hint="Enter the Email Address"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="293dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        android:background="@color/g_line"
        android:hint="Enter the Phone Number"
        android:inputType="number|phone"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/textpassword"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"
        android:background="@color/g_line"
        android:hint="Enter the Password"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/textView4"
        android:layout_width="297dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="370dp"
        android:background="@color/g_line"
        android:hint="Enter the Adhar Number"
        android:inputType="number|phone"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="297dp"
        android:layout_height="36dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="420dp"
        android:background="@color/g_line"
        android:hint="Enter the Correct UPI Id"
        android:inputType="text"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/textView6"
        android:layout_width="297dp"
        android:layout_height="52dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="43dp"
        android:background="@color/g_line"
        android:hint="Enter the Address "
        android:inputType="textMultiLine"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/linearLogOut"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="LogoutClick"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:focusableInTouchMode="false"
            android:layout_gravity="center_vertical"
            android:background="@drawable/headerbkg"
            android:backgroundTint="#2196F3"
            android:src="@drawable/baseline_logout_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/logout"
            style="@style/MediumTextViewThin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="Logout"
            android:textSize="18dp"
            android:textColor="@color/g_gray700"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/purple_200"
        android:text="Save"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>