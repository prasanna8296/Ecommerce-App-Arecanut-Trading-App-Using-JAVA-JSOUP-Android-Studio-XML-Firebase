<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/chekout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/g_blue100"
        android:inputType="none"
        android:text="CheckOut"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">


            <TextView
                android:id="@+id/edittxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/nunito_bold"
                android:text="DeliveryDetails:"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="101dp"
            android:padding="1dp">

            <ImageView
                android:id="@+id/txtlocationview"
                android:layout_width="51dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline_location_on_24"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:textColor="#CB2525"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtdeliverydetails"
                android:layout_width="289dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:inputType="textMultiLine"
                android:text="DeliveryDetails"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="201dp"
            android:padding="1dp">


            <TextView
                android:id="@+id/edittxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Payment Mode:"
                android:textColor="#000000"
                android:textSize="20dp"
                />

            <Button
                android:id="@+id/paybutton"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-140dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/button_bg"
                android:text="Pay Now"
                android:textColor="#ffffff"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/editpricetxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:text="Sub Total"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pricetxt1"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:text="Total:"
                android:textColor="#000000"
                android:textSize="18dp" />/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/editpricetxt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:text="Shipping"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pricetxt2"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="100"
                android:textColor="#000000"
                android:textSize="18dp" />/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/editpricetxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:inputType="none"
                android:text="Total"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pricetxt3"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="255dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="18dp" />/>
        </LinearLayout>

        <Button
            android:id="@+id/payNow"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg"
            android:text="Proceed To Confirm"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>